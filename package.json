{
  "name": "@darkobits/log",
  "description": "The logger that darkobits uses.",
  "version": "1.1.3",
  "author": "darkobits",
  "license": "WTFPL",
  "keywords": [
    "log",
    "npm",
    "unique"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darkobits/log.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/log.js",
  "scripts": {
    "clean": "rimraf dist",
    "check:styles": "tslint --project tsconfig.json --format codeFrame",
    "check:types": "tsc --emitDeclarationOnly && rimraf **/*.spec.d.ts",
    "test": "mocha --require ./etc/test-setup.js --recursive src/**/*.spec.ts",
    "prebuild": "run-p clean check:*",
    "build": "babel src --extensions='.ts' --ignore='**/*.spec.ts,**/*.d.ts' --out-dir=dist --source-maps=inline",
    "prebump": "npm run build",
    "bump": "standard-version",
    "bump:beta": "npm run prebump && standard-version --prerelease=beta"
  },
  "dependencies": {
    "@darkobits/env": "^0.1.0",
    "@darkobits/import-unique": "^1.0.2",
    "npmlog": "^4.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/mocha": "^5.2.5",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^10.12.10",
    "@types/npmlog": "^4.1.1",
    "@types/sinon": "^5.0.7",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mock-require": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "source-map-support": "^0.5.9",
    "standard-version": "^4.4.0",
    "tslint": "^5.11.0",
    "tslint-xo": "^0.10.0",
    "typescript": "^3.1.6"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "exclude": [
      "coverage",
      "dist",
      "etc",
      "mocks",
      "**/*.spec.*",
      "**/*.d.ts"
    ],
    "all": true
  }
}
